<p id="notice"><%= notice %></p>

<h1>Disciplines</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>University</th>
      <th>Speciality</th>
      <th>User</th>
      <th>МОП</th>
      <th>КЭД</th>
      <th>Силлабус</th>
      <th>РУП</th>
      <th>Estimation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @disciplines.each do |discipline| %>
      <tr>
        <td><%= discipline.name %></td>
        <td><%= discipline.university %></td>
        <td><%= discipline.speciality %></td>
        <td><%= discipline.user %></td>
        <td><%= link_to "МОП", university.mop.url(:original, false) %></td>
        <td><%= link_to "КЭД", university.ked.url(:original, false) %></td>
        <td><%= link_to "Силлабус", discipline.syllabus.url(:original, false) %></td>
        <td><%= link_to "РУП", discipline.rup.url(:original, false) %></td>
        <td><%= link_to 'Show', discipline %></td>
        <td><%= link_to 'Edit', edit_discipline_path(discipline) %></td>
        <td><%= link_to 'Destroy', discipline, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

